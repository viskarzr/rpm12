<Window x:Class="rpm12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm12"
        mc:Ignorable="d"
        Title="Практическая работа №12 - Создание интерфейса приложения" Height="550" Width="800" ResizeMode="CanMinimize" Loaded="Window_Loaded" Foreground="Black" Background="#FFE2F4FF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="Инструменты">
                <MenuItem Header="Расчитать"></MenuItem>
                <MenuItem Header="Очистить все поля"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Выйти"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="5,5,5,5" Grid.Row="1">
            <TabItem Header="Объём и площадь паралелепипеда" >
                <Grid Background="#FFF7FCFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header=" --Исходные данные-- " Margin="5,5,5,5" Grid.RowSpan="3">
                        <StackPanel Margin="5,5,5,5">
                            <Label Content="Сторона a:" Margin="0,5,0,0"/>
                            <TextBox x:Name="tbA" TextWrapping="Wrap" Width="200" Margin="0,5,0,0"/>
                            <Label Content="Сторона b:" Margin="0,5,0,0"/>
                            <TextBox x:Name="tbB" TextWrapping="Wrap"  Width="200" Margin="0,5,0,0"/>
                            <Label Content="Сторона c:" Margin="0,5,0,0"/>
                            <TextBox x:Name="tbC" TextWrapping="Wrap" Width="200" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header=" --Результат-- " Margin="5,5,5,5" Grid.RowSpan="3">
                        <StackPanel Margin="5,5,5,5">
                            <Label Content="Объём:" Margin="0,5,0,0"/>
                            <TextBox x:Name="tbVolume" TextWrapping="Wrap" Width="200" Margin="0,5,0,0"/>
                            <Label Content="Площадь:" Margin="0,5,0,0"/>
                            <TextBox x:Name="tbArea" TextWrapping="Wrap" Width="200" Margin="0,5,0,0"/>
                            <Button x:Name="btnCalc" Content="Рассчитать" Width="200" Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Сумма и произведение чисел">
                <Grid Background="#FFF7FCFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox Header=" --Исходные данные-- " Margin="5,5,5,5" Grid.RowSpan="3"/>
                    <GroupBox Grid.Column="1" Header=" --Результат-- " Margin="5,5,5,5" Grid.RowSpan="3"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StatusBar Grid.Row="5" Grid.RowSpan="1" Grid.ColumnSpan="2" >
            <TextBlock x:Name="var" Text="Вариант №5" Margin="5,0,5,0"/>
            <Separator></Separator>
            <TextBlock x:Name="time" Text="12:12" Margin="5,0,5,0" />
            <Separator></Separator>
            <TextBlock x:Name="data" Text="21.01.2025" Margin="5,0,5,0"/>
        </StatusBar>
        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAbout" Content="О программе" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10" Width="100"/>
            <Button x:Name="btnExit" Content="Выйти" VerticalAlignment="Center" Margin="10,10,10,10" Width="60"/>
        </StackPanel>

    </Grid>
</Window>
